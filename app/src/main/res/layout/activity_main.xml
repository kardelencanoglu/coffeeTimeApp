<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textStyle="bold"
              android:fontFamily="@font/font"
              android:textSize="100sp"
              android:layout_gravity="center"
              android:paddingTop="20dp"
              android:textColor="@color/coffee"
              android:text="Hoşgeldiniz!  "/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textStyle="bold"
              android:fontFamily="@font/font"
              android:textSize="70sp"
              android:layout_gravity="center"
              android:textColor="@color/coffee"
              android:text="Bugün ne yapmak istersiniz?  "/>

    <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="2">

    <Button
            android:layout_width="50dp"
            android:layout_height="430dp"
            android:paddingTop="190dp"
            android:layout_margin="30dp"
            android:layout_columnWeight="1"
            android:fontFamily="@font/font"
            android:textSize="30sp"
            android:textStyle="bold"
            android:background="@drawable/turkish_coffee"
            android:text="Kahve  Falı  "/>

    <!-- İkinci buton -->
    <Button
            android:layout_width="50dp"
            android:layout_height="430dp"
            android:paddingTop="190dp"
            android:layout_margin="30dp"
            android:layout_columnWeight="1"
            android:textSize="30sp"
            android:textStyle="bold"
            android:fontFamily="@font/font"
            android:background="@drawable/tarot"
            android:text="TAROT" />

    <!-- Üçüncü buton -->
    <Button
            android:layout_width="50dp"
            android:layout_height="430dp"
            android:paddingTop="190dp"
            android:layout_margin="30dp"
            android:layout_columnWeight="1"
            android:background="@drawable/hand"
            android:fontFamily="@font/font"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="EL  FALI" />

    <!-- Dördüncü buton -->
    <Button
            android:layout_width="50dp"
            android:layout_height="430dp"
            android:paddingTop="190dp"
            android:layout_columnWeight="1"
            android:layout_margin="30dp"
            android:layout_row="1"
            android:background="@drawable/horoscope"
            android:fontFamily="@font/font"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="BURÇ YORUMU  "/>

    </GridLayout>
</LinearLayout>